<?xml version="1.0" encoding="utf-8"?>
<!-- 主功能列表的item布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp" >

    <FrameLayout
        android:id="@+id/main_more_profile_photo_gridview_item_imageViewLL"
        android:layout_width="122.5dp"
        android:layout_height="122.5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/main_more_profile_photo_gridview_item_imageView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/cosplay_preview_small_bg" />

        <ImageView
            android:id="@+id/main_more_profile_photo_gridview_item_imageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/common_default_img_no_border_120dp_3x" />
    </FrameLayout>
    
    <TextView
        android:id="@+id/main_more_profile_photo_gridview_item_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_more_profile_photo_gridview_item_imageViewLL"
        android:layout_centerHorizontal="true"
        android:text="none"
        android:visibility="gone"
        android:textColor="@color/gray_for_text"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/main_more_profile_photo_gridview_item_imageViewLL"
        android:layout_alignLeft="@+id/main_more_profile_photo_gridview_item_imageViewLL"
        android:layout_alignRight="@+id/main_more_profile_photo_gridview_item_imageViewLL"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="#9f000000"
        android:gravity="center_vertical"
        android:padding="0dp" >

        <TextView
            android:id="@+id/main_more_profile_photo_gridview_item_fileSizeHumanView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:text="6.5M"
            android:textColor="@color/bg_gray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/main_more_profile_photo_gridview_item_downloadCountView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/textView1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="120"
            android:textColor="@color/bg_gray"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/main_more_profile_photo_view_icon"
            android:layout_marginLeft="3dp" />

    </RelativeLayout>

</RelativeLayout>