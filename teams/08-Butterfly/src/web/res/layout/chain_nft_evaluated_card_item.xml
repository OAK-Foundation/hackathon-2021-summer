<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FilmCard"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@drawable/home01_bg_card"
    >

    <!--<android.support.v7.widget.CardView-->

    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_margin="8dp"-->
    <!--app:cardCornerRadius="8dp"-->
    <!--app:cardElevation="4dp">-->

    <!--图片部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:contentDescription="@null"
            android:id="@+id/NFT_film_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/sdj"/>

        <!--图片中的布局看是否需要加一个渐进的背景，如淘票票一样-->

        <!--参评人数-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参评人数"
                android:textColor="@color/white"
                android:gravity="center_vertical|left"
                android:textSize="10sp"
                android:textStyle="italic"
                />
            <TextView
                android:id="@+id/NFT_part_in_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120000"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:layout_gravity="center_horizontal"
        android:padding="8dp" >


        <TextView
            android:id="@+id/NFT_film_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="#565656"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="金刚大战哥斯拉"/>


        <LinearLayout
            android:id="@+id/film_score_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NFT_film_name"
            android:layout_marginTop="8dp"

            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影评"
                android:textColor="@color/yellow_title"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:textStyle="bold|italic"
                />
            <TextView
                android:id="@+id/NFT_film_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="8.0"
                android:textColor="@color/yellow_title"
                android:gravity="center_vertical"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NFT_film_name"
            android:layout_marginTop="8dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#565656"
                android:textSize="10sp"
                android:text="黑马指数"/>

            <TextView
                android:id="@+id/NFT_heima_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal"

                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:text="4"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="owner"
                android:textColor="#565656"
                android:textSize="12sp"
                android:textStyle="italic"
                />
            <TextView
                android:id="@+id/owner_account_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0xdaighgh286486"
                android:textColor="#565656"
                android:gravity="center_vertical"
                android:textSize="10sp"
                android:textStyle="italic"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="#565656"
                android:textSize="12sp"
                android:textStyle="italic"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/NFT_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0.12"
                    android:textColor="#565656"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    />
                <TextView
                    android:id="@+id/NFT_price_uni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:text="ETH"
                    android:textColor="#565656"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    />


            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>


</LinearLayout>